version: '3.8'

services:
  db:
    container_name: postgres_db
    image: postgres:14.2-alpine
    env_file: .env
    ports:
      - 5434:5432
    volumes:
      - postgres-data:/var/lib/postgresql/data
    networks:
      - db-network
  
  pgadmin:
    container_name: pgadmin4
    image: dpage/pgadmin4
    env_file: .env
    ports:
      - 5050:80
    networks:
      - db-network
    volumes:
      - pgadmin-data:/var/lib/pgadmin

networks:
  hite-network:
    external: true
    
volumes:
  postgres-data:
    name: postgres-data
  pgadmin-data:
    name: pgadmin-data
